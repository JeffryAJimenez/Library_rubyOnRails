<h1> New Book </h1>
<a><%=	link_to 'Home', root_path()	%></a>
<a><%=	link_to 'Books', books_path()	%></a>
<%=	form_with scope:	:book,	url: books_path, local:	true	do	|form|	%>
  <%	if @book.errors.any?	%>
    <div	id="error_explanation">
      <h2>
      error/s	prohibited
      this book from being saved:
      </h2>
      <ul>
        <%	@book.errors.full_messages.each do	|msg|	%>
        <li><%=	msg %></li>
        <%	end	%>
      </ul>
    </div>
  <%	end	%>
  <p>
    <%=	form.label :title %><br>
    <%=	form.text_field:title %>
  </p>
  <p>
    <%=	form.label :author %><br>
    <%=	form.text_area :author %>
  </p>
  <p>
    <%=	form.label :ISBN %><br>
    <%=	form.text_area :ISBN %>
  </p>
  <p>
    <%=	form.label :copies %><br>
    <%=	form.number_field :copies, min: 0 %>
  </p>
  <p>
    <%=	form.submit %>
  </p>
<%	end	%>
