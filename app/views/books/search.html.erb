<form action="/search">
  <input type="text" name="q" placeholder="Search">
  <button type="submit">Search</button>
  <select name="search_by">
              <option value = "title">Title</option>
              <option value = "author">Author</option>
              <option value = "ISBN">ISBN</option>
  </select>
</form>
  <h1>Search Results</h1>
<a><%=	link_to 'Home', root_path()	%></a>
<a><%=	link_to 'Books', books_path()	%></a>
<%	if @book.errors.any?	%>
  <div	id="error_explanation">
    <h2>
    error/s	prohibited
    this book from being saved:
    </h2>
    <ul>
      <%	@book.errors.full_messages.each do	|msg|	%>
      <li><%=	msg %></li>
      <%	end	%>
    </ul>
  </div>
<%	end	%>
  <table>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>ISBN</th>
      <th>Copies</th>
      <th></th>
    </tr>
    <%	@books.each do	|book|	%>
    <tr>
      <td><%=	book.title %></td>
      <td><%=	book.author %></td>
      <td><%=	book.ISBN %></td>
      <td><%=	book.copies %></td>
      <td><%=	link_to 'Show', book_path(book)	%></td>
      <td><%=	link_to 'Edit', edit_book_path(book)	%></td>
      <%	if book.copies > 0	%>
        <td><%=	link_to 'Checkout', checkout_path(book), method: :post %></td>
      <%	end	%>
    <%	end	%>
  </table>
